<div class="container">
      <div class="col-6">
        <%= link_to "add", new_flat_path, class: "btn btn-ghost" %>

        <% @flats.each do | flat | %>
          <div class="card-trip">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
            <div class="card-trip-infos">
              <%= link_to flat.title, flat_path(flat) %>
                <p><%= flat.flat_type %></p>
                <p><%= flat.address %></p>
                <p><%= flat.size %></p>
                <h2 class="card-trip-pricing"><%= flat.price %></h2>
            </div>
        <% end %>
          </div>
      </div>

    <div class="map-container">
      <div class="col-6" id="map" style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
</div>
